azul = #2D90D0

body 
	background white
	font-family 'Open Sans'	
footer
	margin-top 100px
	text-align center
#logo
	margin-top 20px
	margin-right 50px
	text-align right

#items
	text-align center
	.itemServicios
		margin-left 20px
		display inline-block
		margin-top 50px
		width 240px
		height 320px
		.titulo 
			transition 0.3s
			height 28px
			font-size 16px
			background #2D90D0
			color white
		.imagen
			transition 0.3s
			img 
				margin-top 0px
				width 240px
		.imagen:hover
			opacity 0.6
			
	.itemServicios:hover
		cursor pointer
		
		.titulo 
			transition 0.3s
			background #4D9AC3
.articlesCentro
	width 1200px
	margin-left auto
	margin-right auto
.botonCerrar
	padding 5px
	border-radius 5px 5px 0 0
	margin-bottom 10px
	float right
.botonCerrar:hover
	background azul
	cursor pointer

.modals
	text-align justify
	margin-left auto
	margin-right auto
	margin 10px
	h3
		color #2D90D0
.sangria
	margin-left 7px
	
#servicios
	width 700px
	
	#navegacionModalServicios
		ul
			padding-left 0px
			width auto
			list-style none
			color azul
			
			li 
				padding 3px
				display inline-block
				margin-left 10px
				border-left 2px solid azul
				border-top 2px solid azul
				border-right 2px solid azul
				border-radius 4px 4px 0px 0px
			li:hover
				transition 0.3s
				color grey
				border-left 2px solid grey 
				border-top 2px solid grey 
				border-right 2px solid grey 
				border-radius 4px 4px 0px 0px
				cursor pointer
	#panelDeContenido
		margin-top -10px
		width 100%
		height 400px
		border 2px solid azul
.modal-content
	padding 30px
	
	



